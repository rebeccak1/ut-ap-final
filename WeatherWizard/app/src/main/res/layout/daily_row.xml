<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:padding="8dp"
    android:orientation="horizontal"
    android:id="@+id/rowview"
    >
    <!-- Background attribute gives the whole layout the satisfying ripple
    effect on selection -->

    <TextView
        android:id="@+id/rowDay"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Mon"
        android:layout_gravity="center"

        />
    <TextView
        android:id="@+id/rowDate"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="20"

        />
    <ImageView
        android:id="@+id/rowIcon"
        android:layout_weight="1"
        android:layout_gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/clearsky"
        />
    <TextView
        android:id="@+id/rowLow"
        android:layout_weight="1"
        android:layout_gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue1"
        android:textSize="20sp"
        android:text="70"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rowIcon"
        />


    <TextView
        android:id="@+id/rowHigh"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="@color/cherry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</LinearLayout>
