<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:padding="8dp"
    android:orientation="horizontal"
    android:id="@+id/rowview"

    >
    <!-- Background attribute gives the whole layout the satisfying ripple
    effect on selection -->

    <TextView
        android:id="@+id/rowName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!--    app:layout_constraintEnd_toStartOf="@+id/rowLength"-->

    <TextView
        android:id="@+id/rowLength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <!--    app:layout_constraintStart_toEndOf="@+id/rowName"-->

</androidx.constraintlayout.widget.ConstraintLayout>
